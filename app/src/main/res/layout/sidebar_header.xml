<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:orientation="vertical"
    android:background="#B32134"
    android:gravity="bottom"
    android:padding="16dp"
    android:backgroundTint="@color/windowBackground"
    android:theme="@style/HeaderLightAndDark"

    >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/seerem_logo"
        android:layout_weight="1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sidebar_supervisor_text"
        android:fontFamily="sans-serif-black"
        android:text="@string/welcome_text"
        android:textSize="26sp"
        android:textColor="@color/colorPrimary"
        android:paddingTop="0dp"
        android:layout_gravity="center"
        android:layout_weight="0"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sidebar_header_fullname_textview"
        android:paddingTop="8dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sidebar_header_username_textview"/>
</LinearLayout>