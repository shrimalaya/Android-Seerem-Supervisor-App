<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/sidebar_drawer_layout"
    android:fitsSystemWindows="true"
    android:background="@color/windowBackground"
    tools:openDrawer="start">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".UI.UserInfoActivity"
        android:orientation="vertical"
        >

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_for_sidebar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimary"
            android:elevation="4dp"
            android:theme="@style/ActionBarTitleIconConsistentColor"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:title="@string/user_info_title"/>

        <TableLayout
            android:id="@+id/userInfoInputTableLayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="7">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/windowBackground"
                android:gravity="center">

            <TextView
                android:id="@+id/userInfoHeader"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:fontFamily="sans-serif-smallcaps"
                android:gravity="center"
                android:paddingStart="20dip"
                android:paddingLeft="20dip"
                android:text="@string/user_info_header"
                android:textColor="@color/colorPrimary"
                android:textSize="30sp"
                android:textStyle="bold" />
        </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/windowBackground"
                android:gravity="center">

            <TextView
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:fontFamily="sans-serif-smallcaps"
                android:gravity="center"
                android:text="@string/name_entry"
                android:textColor="@color/textColorPrimary"
                android:textSize="24dp"
                android:textStyle="bold" />
        </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/windowBackground"
                android:gravity="center">

            <EditText
                android:id="@+id/editFirstName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:backgroundTint="@color/seerem_logo_colour"
                android:clickable="false"
                android:ems="10"
                android:fontFamily="sans-serif-smallcaps"
                android:hint="@string/first_name_entry"
                android:inputType="none"
                android:paddingStart="20dip"
                android:paddingLeft="20dip"
                android:textAllCaps="true"
                android:textColor="@color/textColorPrimary"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editLastName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:backgroundTint="@color/seerem_logo_colour"
                android:clickable="false"
                android:ems="10"
                android:fontFamily="sans-serif-smallcaps"
                android:hint="@string/last_name_entry"
                android:inputType="none"
                android:paddingStart="20dip"
                android:paddingLeft="20dip"
                android:textAllCaps="true"
                android:textColor="@color/textColorPrimary"
                android:textStyle="bold" />
        </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/windowBackground"
                android:gravity="center">

            <TextView
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:fontFamily="sans-serif-smallcaps"
                android:paddingStart="20dip"
                android:paddingLeft="20dip"
                android:text="@string/id_entry"
                android:textColor="@color/textColorPrimary"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/seerem_logo_colour"
                android:clickable="false"
                android:ems="10"
                android:fontFamily="sans-serif-smallcaps"
                android:inputType="none"
                android:textAllCaps="true"
                android:textColor="@color/textColorPrimary"
                android:textStyle="bold" />
        </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/windowBackground"
                android:gravity="center">

            <TextView
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:fontFamily="sans-serif-smallcaps"
                android:paddingStart="20dip"
                android:paddingLeft="20dip"
                android:text="@string/medical_considerations_entry"
                android:textColor="@color/textColorPrimary"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editMedical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/seerem_logo_colour"
                android:ems="10"
                android:fontFamily="sans-serif-smallcaps"
                android:inputType="textPersonName"
                android:textAllCaps="true"
                android:textColor="@color/textColorPrimary"
                android:textStyle="bold" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/windowBackground"
                android:gravity="center">

            <TextView
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:fontFamily="sans-serif-smallcaps"
                android:paddingStart="20dip"
                android:paddingLeft="20dip"
                android:text="@string/emergency_contact_entry"
                android:textColor="@color/textColorPrimary"
                android:textSize="22sp"
                android:textStyle="bold" />

                <RadioGroup
                    android:id="@+id/radioContactType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="@color/textColorPrimary"
                    android:paddingRight="20dip"
                    android:textColor="@color/textColorPrimary">

                <RadioButton
                    android:id="@+id/radio_family"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="sans-serif-smallcaps"
                    android:text="@string/emergency_contact_type_family"
                    android:textColor="@color/textColorPrimary"
                    android:textSize="20dp" />


                <RadioButton
                    android:id="@+id/radio_friend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="sans-serif-smallcaps"
                    android:text="@string/emergency_contact_type_friend"
                    android:textColor="@color/textColorPrimary"
                    android:textSize="20dp" />
            </RadioGroup>
        </TableRow>
    </TableLayout>

        <TableRow
            android:id="@+id/contactNameEntry"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/windowBackground"
            android:gravity="center">

        <EditText
            android:id="@+id/editEmergencyNumber"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:backgroundTint="@color/seerem_logo_colour"
            android:fontFamily="sans-serif-smallcaps"
            android:hint="@string/emergency_contact_number_entryy"
            android:inputType="number"
            android:paddingStart="20dip"
            android:paddingLeft="20dip"
            android:textColor="@color/textColorPrimary"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editEmergencyContactName"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:backgroundTint="@color/seerem_logo_colour"
            android:fontFamily="sans-serif-smallcaps"
            android:hint="@string/emergency_contact_name_entry"
            android:inputType="textPersonName"
            android:paddingStart="20dip"
            android:paddingLeft="20dp"
            android:textAllCaps="true"
            android:textColor="@color/textColorPrimary"
            android:textSize="18sp"
            android:textStyle="bold" />

        </TableRow>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:background="@color/colorPrimaryDark"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonSaveUserInfo"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/windowBackground"
            android:fontFamily="sans-serif-smallcaps"
            android:text="@string/save_user_info_button"
            android:textColor="@color/textColorPrimary"
            android:textStyle="bold" />

        </LinearLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#A8A8A8"
        android:paddingTop="2dp"
        app:itemBackground="@color/colorPrimary"
        app:itemIconTint="@drawable/selector"
        app:itemTextColor="@drawable/selector"
        app:menu="@menu/menu_navigation_bar" />

    </LinearLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/sidebar_navigation_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/sidebar_header"
        android:background="@color/windowBackground"
        android:textColor="@color/textColorPrimary"
        app:menu="@menu/menu_sidebar_navigation_drawer"
        android:theme="@style/SideBarLightAndDark"/>

</androidx.drawerlayout.widget.DrawerLayout>